<div id = "main_3">
	
	<% form_for @holidayrequests, :html => { :multipart => true } do |f| %>

<p class = "normtext"><%= f.label :datefrom, "Date From (YYYY/MM/DD):" %><br />
  <%=f.text_field :datefrom%>
</p>
<p class = "normtext"><%= f.label :dateto, "Date To (YYYY/MM/DD):" %><br />
  <%=f.text_field :dateto%>
</p>
<p> <%= f.file_field :photo %></p>
	<% if current_user.admin == true %>
<p class = "normtext"><%= f.label :approved, "Approved?:" %><br />
  <%=f.check_box :approved%>
</p>
<% end %>
<p> <%= f.submit 'Save' %></p>

<%= link_to "Cancel", holidayrequests_path %></p>
</div>
<% end %>
